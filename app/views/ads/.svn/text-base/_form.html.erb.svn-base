<%# remote_form_for(ad) do |a| %>
<% form_tag('/ads/new') do %>
Posting Title:<br/>
<%= text_field_tag "title", nil, :size => 57 %><br/><br/>
Posting Description:<br/>
<%= text_area_tag "ad", nil, :rows => 10, :cols => 55 %><br/><br/>
Reply-to Email address:<br/>
<%= text_field_tag "email", nil, :size => 57 %><br/><br/>
Type email address again:<br/>
<%= text_field_tag "email_verify", nil, :size => 57 %>
<%= hidden_field_tag 'category', @category.id %><br/><br/>
<%= submit_tag submit_text %>
<% end %>